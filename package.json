{
  "name": "gpt-translate-json",
  "private": false,
  "version": "0.0.1",
  "description": "Command to automatically translate your app JSON files using OpenAI GPT Chat Completions API",
  "type": "module",
  "scripts": {
    "build": "tsc && vite build --mode lib && dts-bundle-generator -o lib/index.d.ts src/index.ts",
    "build.lib": "vite build --mode lib",
    "build.lib.watch": "vite build --mode lib --watch",
    "release": "npm run build && np",
    "test": "echo \"No test\"",
    "gpt-translate-json": "gpt-translate-json --apiKey=openai_apy_key --model=gpt-3.5-turbo --maxTokens=3000 --langs=en-US,it-IT --originalLang=en-US"
  },
  "bin": {
    "gpt-translate-json": "./lib/cli.js"
  },
  "dependencies": {
    "openai": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.4.2",
    "dts-bundle-generator": "^8.0.1",
    "np": "^7.7.0",
    "typescript": "^5.1.6",
    "vite": "^4.4.4",
    "rollup-plugin-add-shebang": "^0.3.1"
  },
  "main": "./lib/index.js",
  "module": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "import": "./lib/index.js"
    }
  },
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "homepage": "https://github.com/robisim74/gpt-translate-json",
  "repository": {
    "type": "git",
    "url": "https://github.com/robisim74/gpt-translate-json.git"
  },
  "bugs": {
    "url": "https://github.com/robisim74/gpt-translate-json/issues"
  },
  "keywords": [
    "json",
    "translate",
    "i18n"
  ],
  "license": "MIT"
}
